<hibernate-mapping>
    <class name="xyz.sashenka.modelauthapp.model.dto.db.DBUser" table="USERS">
        <id column="id" name="id" type="int">
            <generator class="increment"/>
        </id>
        <version column="version" name="version" type="long"/>
        <property column="login" name="login" type="string"/>
        <property column="hash_password" name="hash" type="string"/>
        <property column="salt" name="salt" type="string"/>
    </class>
</hibernate-mapping>